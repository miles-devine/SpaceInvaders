{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Build core_basic_window",
            "type": "shell",
            "command": "C:/msys64/mingw64/bin/g++.exe",
            "args": [
                "main.cpp",
				"ship.cpp",
				"enemy.cpp",
				"game.cpp",
				"laser.cpp",
                "-o",
                "main.exe",
                "-IC:/raylib/raylib/src",
                "-LC:/raylib/raylib/src",
                "-lraylib",
                "-lopengl32",
                "-lgdi32",
                "-lwinmm",
                "-static"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": ["$gcc"]
        },
        {
            "label": "Clean",
            "type": "shell",
            "command": "cmd",
            "args": [
                "/c",
                "if exist main.exe del main.exe"
            ]
        }
    ]
}
